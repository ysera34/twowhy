<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="@dimen/shop_vicinity_item_height">

    <ImageView
        android:id="@+id/shop_image_view"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3">

    </ImageView>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="7"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:background="@color/colorWhite"
        android:padding="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/shop_name_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:textSize="16sp"
                android:textColor="@color/colorBlack"/>

            <TextView
                android:id="@+id/shop_district_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:textSize="16sp"
                android:textColor="@color/colorBlack"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/shop_rating_value_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginEnd="8dp"
                android:text="3.0"
                android:textSize="12sp"
                android:textColor="@color/colorFontLevel2"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:drawableStart="@drawable/ic_star"
                android:drawablePadding="3dp"/>

            <TextView
                android:id="@+id/shop_like_value_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/shop_rating_value_text_view"
                android:text="4.5"
                android:textSize="12sp"
                android:textColor="@color/colorFontLevel2"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:drawableStart="@drawable/ic_heart"
                android:drawablePadding="3dp"/>

            <TextView
                android:id="@+id/shop_distance_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:text="500m"
                android:textSize="13sp"
                android:textColor="@color/colorFontLevel0"
                android:gravity="center_vertical"/>

        </RelativeLayout>

        <com.android.twowhy.shoptracker.view.custom.ShopAttributeLayout
            android:id="@+id/shop_attribute_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_gravity="center">

        </com.android.twowhy.shoptracker.view.custom.ShopAttributeLayout>

    </LinearLayout>


</LinearLayout>